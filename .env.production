# SerpBear Production Environment Configuration
# This file provides production-ready defaults for Render deployment
# IMPORTANT: Update USER, PASSWORD, and other sensitive values in Render dashboard

# Authentication & Security (CHANGE THESE VALUES IN RENDER!)
USER=admin
PASSWORD=CHANGE_ME_IN_RENDER_DASHBOARD
SECRET=RENDER_WILL_GENERATE_THIS
APIKEY=RENDER_WILL_GENERATE_THIS
SESSION_DURATION=24

# Application Settings
NEXT_PUBLIC_APP_URL=https://your-app-name.onrender.com
NEXT_PUBLIC_SCREENSHOTS=true

# White-label Branding
NEXT_PUBLIC_WHITE_LABEL=false
WHITE_LABEL_LOGO_FILE=branding-logo.png
NEXT_PUBLIC_PLATFORM_NAME=SerpBear

# Cron Job Configuration
CRON_TIMEZONE=America/New_York
CRON_MAIN_SCHEDULE=0 0 0 * * *
CRON_FAILED_SCHEDULE=0 0 */1 * * *
CRON_EMAIL_SCHEDULE=0 0 6 * * *

# Production Settings
NODE_ENV=production
LOG_LEVEL=info
LOG_SUCCESS_EVENTS=true
NEXT_TELEMETRY_DISABLED=1
FORCE_HTTPS=true
SECURE_COOKIES=true

# Database (SQLite by default, persistent via Render disk)
DATABASE_URL=sqlite:./data/database.sqlite

# Optional Integrations (Configure in Render dashboard as needed)
# SCRAPER_TYPE=scrapingrobot
# SCRAPING_API=your_scraping_api_key
# SEARCH_CONSOLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# SEARCH_CONSOLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL_FROM=your-email@gmail.com
# SCREENSHOT_API=your_screenshot_api_key